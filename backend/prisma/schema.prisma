datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Conversation {
  id        String    @id
  createdAt DateTime  @default(now())
  messages  Message[]
}

model Message {
  id             String   @id
  conversationId String
  sender         String
  text           String
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id])
}
